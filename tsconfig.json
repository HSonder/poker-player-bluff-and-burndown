{
    "compilerOptions": {
        "module": "commonjs", // Ensure this is set to "commonjs"
        "target": "ES2021",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "out",
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "esModuleInterop": true, // Add this option
        "resolveJsonModule": true // Add this option
    },
    "exclude": [
        "out/*",
        "node_modules",
        "jest.config.js",
        "src/*.test.ts",
        "src/*.spec.ts"
    ]
}